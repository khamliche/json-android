<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_voucherlist_item_1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingTop="2dip"
    android:paddingBottom="2dip"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/imageViewtest"
        android:layout_width="80dip"
        android:layout_height="118dip"
        android:adjustViewBounds="true"
        android:background="@drawable/bg_list"
        android:paddingLeft="5dip"
        android:paddingRight="5dip"
        android:scaleType="fitCenter" />

    <LinearLayout
        android:id="@+id/ll_voucherlist_item_2"
        android:layout_width="200dip"
        android:layout_height="118dip"
        android:background="@drawable/bg_list"
        android:orientation="vertical"
        android:scrollbars="none" >

        <TextView
            android:id="@+id/rowtext_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_marginTop="8dp"
            android:maxLines="3"
            android:minLines="3"
            android:paddingLeft="5dip"
            android:scrollbars="none"
            android:shadowColor="#F5F2EF"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="1.5"
            android:textColor="@color/grey100"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/rowtext_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dip"
            android:maxLines="1"
            android:textColor="@color/grey50"
            android:textSize="14sp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/rowtext_status"
            android:layout_width="100dip"
            android:layout_height="wrap_content"
            android:layout_marginBottom="1dip"
            android:layout_marginLeft="5dip"
            android:maxLines="1"
            android:shadowColor="#F5F2EF"
            android:shadowDx="3"
            android:shadowDy="3"
            android:shadowRadius="1.5"
            android:textColor="@color/grey70"
            android:textSize="14sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_voucherlist_item_2"
        android:layout_width="wrap_content"
        android:layout_height="118dip"
        android:background="@drawable/bg_list"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/imageViewtest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dip"
            android:layout_marginRight="5dp"
            android:layout_marginTop="50dip"
            android:adjustViewBounds="true"
            android:paddingRight="17dip"
            android:scaleType="fitCenter"
            android:src="@drawable/arrow_grey" />
    </LinearLayout>

</LinearLayout>